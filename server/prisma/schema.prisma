// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  account   Account?
  createdAt DateTime @default(now())

  passwordResets PasswordReset[]
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  expiresAt DateTime
  usedAt    DateTime?
}

model Account {
  id        Int           @id @default(autoincrement())
  userId    Int           @unique
  user      User          @relation(fields: [userId], references: [id])
  balance   Int           @default(0) // centavos
  createdAt DateTime      @default(now())
  txsFrom   Transaction[] @relation("from")
  txsTo     Transaction[] @relation("to")

  autoDebit AutoDebit?
}

model Transaction {
  id        Int      @id @default(autoincrement())
  fromId    Int?
  toId      Int?
  amount    Int      // centavos, sempre positivo
  createdAt DateTime @default(now())
  from      Account? @relation("from", fields: [fromId], references: [id])
  to        Account? @relation("to", fields: [toId], references: [id])
}

model AutoDebit {
  id        Int      @id @default(autoincrement())
  account   Account  @relation(fields: [accountId], references: [id])
  accountId Int      @unique

  active    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
