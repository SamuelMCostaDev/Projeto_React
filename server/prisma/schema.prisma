// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  account   Account?
  createdAt DateTime @default(now())

  passwordResets PasswordReset[]

  emailVerified       Boolean   @default(false)
  verifyToken         String?   @unique
  verifyTokenExpires  DateTime?
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  expiresAt DateTime
  usedAt    DateTime?
}

model Account {
  id        Int           @id @default(autoincrement())
  userId    Int           @unique
  user      User          @relation(fields: [userId], references: [id])
  balance   Int           @default(0) // centavos
  createdAt DateTime      @default(now())
  txsFrom   Transaction[] @relation("from")
  txsTo     Transaction[] @relation("to")

  // novos relacionamentos
  card      CreditCard?
  autoDebit AutoDebit?
}


model Transaction {
  id        Int      @id @default(autoincrement())
  fromId    Int?
  toId      Int?
  amount    Int      // centavos, sempre positivo
  createdAt DateTime @default(now())
  from      Account? @relation("from", fields: [fromId], references: [id])
  to        Account? @relation("to", fields: [toId], references: [id])
}

model AutoDebit {
  id        Int      @id @default(autoincrement())
  account   Account  @relation(fields: [accountId], references: [id])
  accountId Int      @unique

  active    Boolean  @default(false)

  dueDay    Int?     // dia do mês para rodar o débito automático

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CreditCard {
  id            Int          @id @default(autoincrement())
  accountId     Int          @unique
  account       Account      @relation(fields: [accountId], references: [id])
  brand         String
  last4         String
  limit         Int          // limite total em centavos
  invoiceAmount Int          @default(0)  // total da fatura em aberto
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  charges       CardCharge[]
}

model CardCharge {
  id          Int         @id @default(autoincrement())
  cardId      Int
  card        CreditCard  @relation(fields: [cardId], references: [id])
  description String
  amount      Int         // centavos
  paid        Boolean     @default(false)
  createdAt   DateTime    @default(now())
}

